<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_row"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="@dimen/setting_icon_size"
        android:layout_height="@dimen/setting_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/setting_icon_padding"
        android:layout_marginLeft="@dimen/setting_icon_padding_left"
        android:layout_marginTop="@dimen/setting_icon_padding" />

    <TextView
        android:id="@+id/setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/setting_text_padding_left"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/setting_text_size"
        tools:text="Setting" />

</LinearLayout>