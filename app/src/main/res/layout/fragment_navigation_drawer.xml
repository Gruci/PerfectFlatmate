<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/colorPrimary"
    tools:context="com.buckle.perf.perfectflatmate.fragment.NavigationDrawerFragment">

    <RelativeLayout
        android:id="@+id/navigation_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/navigation_profile_background"
            android:layout_width="@dimen/nav_drawer_width"
            android:layout_height="@dimen/nav_drawer_profile_height"
            android:background="@drawable/shape_gradient_color" />

        <!--차후 이미지를 갖고올때 Gilde-transformation을 통한 원형 이미지 crop 필요-->
        <ImageView
            android:id="@+id/navigation_profile_picture"
            android:layout_alignBottom="@id/navigation_profile_background"
            android:layout_marginLeft="@dimen/context_width_margin"
            android:layout_marginBottom="@dimen/navigation_profile_bottom_margin"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/shape_circle_white"
            android:src="@drawable/menu_profile"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/navigation_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/navigation_profile_background"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="21dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="하이"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navigation_image_container">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
